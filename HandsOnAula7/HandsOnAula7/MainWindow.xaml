<Window x:Class="HandsOnAula7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandsOnAula7"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="ContentPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle MouseLeftButtonUp="Rectangle_MouseEnter" Fill="CornflowerBlue"></Rectangle>
        <Rectangle x:Name="GreenRect" MouseDown="GreenRect_MouseDown"  Grid.Column="1" Fill="YellowGreen"></Rectangle>
        <Rectangle Grid.Row="1" Fill="Tomato"></Rectangle>
        <Rectangle MouseLeftButtonUp="Rectangle_MouseLeftButtonUp" Grid.Column="1" Grid.Row="1" Fill="Yellow"></Rectangle>
    </Grid>
</Window>
